<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
    <!--
      Main definition that uses layout.html to put title and content attributes from
      Thymeleaf fragments; {1} will be evaluated to either 'list', 'form' or 'view'.
    -->
    <definition name="member/*" template="layout/layout">
        <put-attribute name="head" value="layout/head"/>
        <put-attribute name="content" value="views/{0}" />
        <put-attribute name="foot" value="layout/foot"/>
    </definition>

    <definition name="demo/*" template="layout/layout">
        <put-attribute name="head" value="layout/head"/>
        <put-attribute name="content" value="views/{0}" />
        <put-attribute name="foot" value="layout/foot"/>
    </definition>

    <definition name="account/*" template="layout/layout">
        <put-attribute name="head" value="layout/head"/>
        <put-attribute name="content" value="views/{0}" />
        <put-attribute name="foot" value="layout/foot"/>
    </definition>

</tiles-definitions>